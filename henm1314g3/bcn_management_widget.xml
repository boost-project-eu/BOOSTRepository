									template: '#templateBcnOverview',
									data: { "bcnsList" : bcnsList,
											"accessRights" : userAccessRights,
											text: translations
											},
									append: true
								});

								//	Add new BCN ractive

								var ractiveAddBcn = new Ractive({
								  	el: 'containerBcnAdd',
								  	template: '#bcnAddEditTemplate',
								  	data: { "bcn" : new BCN({}),
								    	"priorityArray" : priorityArray,

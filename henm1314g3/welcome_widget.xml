		<script>


		require( ['http://127.0.0.1:8073/role/BOOSTRepository/henm1314g3/js/config.js'], function (config){
			require( [
				"i18n!http://127.0.0.1:8073/role/BOOSTRepository/henm1314g3/js/nls/welcome.js",
				"async",
				"bootbox",
				"ractive",
			    "jquery",

			    "BCNManager",
			    "LearningDocumentsManager",
			    "WidgetsManager",
			    "ExpertsManager",
			    "AccessRightsManager",
			    "iwc",
			    "utils"
			    ], function(tr, a, b, r) {
			    	Ractive = r;
			    	async = a;
			    	bootbox = b;
			    	translations = tr;

					var space;
					var iwcClient;
					var userAccessRights;
					var agreed;
					var accessRights;

					if (openapp.param.user()) {
						closeAutorisationWindow();
					}
					//gadgets.util.registerOnLoadHandler(init);
					//function init(){
					
					space = new openapp.oo.Resource(openapp.param.space());
					iwcClient = new iwc.Client();
					iwcClient.connect(iwcCallback);
					//}

					$(function(){

						// Get the access rights:
						retrieveAccessRights(function(access){
						
						accessRights = access;
						userAccessRights = access.getUserAccessRights();
						agreed = userAccessRights.hasAgreedToLicense;
						var isManager = userAccessRights.isManager && !userAccessRights.isEmployee; 
						userRole = isManager ? "Manager" : "Employee";
						userUri = openapp.param.user().substring(openapp.param.user().lastIndexOf("/") + 1);
						roleUri = window.parent.location.href.substring(window.parent.location.href.lastIndexOf("/") + 1)

						if (!agreed)
							$("#agreeLisenceModal").modal();

						});  // end of the retrieveAccessRights

						ractiveWelcome = new Ractive({
							el: 'containerWelcome',
						    template: '#templateWelcome',
						    data: {
						    	"text": translations
						    },
						    append: true
						});

						ractiveWelcome.on({
							setGerman: function(event){
								setLanguage("de-de");
							},
							setEnglish: function(event){
								setLanguage("en-en");
							},
							setCzech: function(event){
								setLanguage("cz-cz");
							},
							setGreek: function(event){
								setLanguage("el-el");
							},
							setFrench: function(event){
								setLanguage("fr-fr");
							},
						});

						ractiveLicence = new Ractive({
							el: 'containerLicence',
						    template: '#templateLicense',
						    data: {
						    	"text": translations
						    },
						    append: true
						});

					});

					function iwcCallback(intent){
						if(intent.action == "WELCOME_CREATE"){}
					}

					function setLanguage(locale){
						localStorage.setItem("locale", locale);
						cookieStr = "locale=" + locale
						document.cookie=cookieStr;
						publishLanguageChanged();
						syncLog("Language SelectBox", "Changed language to " + locale, "Welcome", userRole, userUri, roleUri, function(){window.location.reload()})
						// window.location.reload();
					}

					function publishLanguageChanged(){
						var intent = {
							component: "",
							data: "",
							dataType: "text/json",
							flags :["PUBLISH_GLOBAL"],
							action: "LANGUAGE_CHANGED"
						};

						iwcClient.publish(intent);
					}


					function getCookie(cname) {
					    var name = cname + "=";
					    var ca = document.cookie.split(';');
					    for(var i=0; i<ca.length; i++) {
					        var c = ca[i];
					        while (c.charAt(0)==' ') c = c.substring(1);
					        if (c.indexOf(name) == 0) return c.substring(name.length, c.length);
					    }
					    return "";
					}

					$("#agreeButton").click(function(){
						logClick("AgreeLicence button", "User Agreed to Licence", "Welcome", userRole, userUri, roleUri);
						userAccessRights.hasAgreedToLicense = true;
						accessRights.update(function (){
							$("#agreeLisenceModal").modal("hide");
						});
					})

				});
			});


		</script>

